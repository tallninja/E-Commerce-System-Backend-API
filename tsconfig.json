{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strictPropertyInitialization": false,
      "rootDir": "./src",
      "outDir": "./dist",
      "baseUrl": "src",
      "paths": {
        "@domains/*": ["domains/*"]
      }
    },
    "include": [
      "./src/**/*"
    ]
}